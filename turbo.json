{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "dev:test": {
            "dependsOn": ["^dev:ui"]
        },
        "generate:icons": {
            "cache": false
        },
        "create:theme": {
            "cache": false
        },
        "publish": {
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}

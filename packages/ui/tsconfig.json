{
    "extends": "@squaress/configs/tsconfig/index.json",
    "exclude": [
        "node_modules",
        "lib",
        "src/**/*.test.tsx",
        "src/**/*.test.ts",
        "src/**/*.stories.tsx"
    ],
    "compilerOptions": {
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "typeRoots": ["./src/index.ts"],
        "paths": {
            "@components/*": ["components/*"],
            "@config/*": ["config/*"],
            "@styles/*": ["styles/*"],
            "@utils/*": ["utils/*"],
            "@/*": ["*"]
        }
    }
}
